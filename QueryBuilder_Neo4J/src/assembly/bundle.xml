<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bundle</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
                <include>${project.artifactId}-${project.version}.jar.asc</include>
                <include>${project.artifactId}-${project.version}.jar.md5</include>
                <include>${project.artifactId}-${project.version}.jar.sha1</include>
                <include>${project.artifactId}-${project.version}-sources.jar</include>
                <include>${project.artifactId}-${project.version}-sources.jar.asc</include>
                <include>${project.artifactId}-${project.version}-sources.jar.md5</include>
                <include>${project.artifactId}-${project.version}-sources.jar.sha1</include>
                <include>${project.artifactId}-${project.version}-javadoc.jar</include>
                <include>${project.artifactId}-${project.version}-javadoc.jar.asc</include>
                <include>${project.artifactId}-${project.version}-javadoc.jar.md5</include>
                <include>${project.artifactId}-${project.version}-javadoc.jar.sha1</include>
                <include>${project.artifactId}-${project.version}.pom</include>
                <include>${project.artifactId}-${project.version}.pom.asc</include>
                <include>${project.artifactId}-${project.version}.pom.md5</include>
                <include>${project.artifactId}-${project.version}.pom.sha1</include>
            </includes>
            <outputDirectory>${groupIdPath}/${project.artifactId}/${project.version}</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
